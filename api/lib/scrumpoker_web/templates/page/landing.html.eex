<script>
let app = new Vue({
    el: '#app',
    data: {
        userName: "",
        roomName: "<%= @room %>",
    },
    created: function () {
		var userNameFromCookie = localStorage.getItem('userName');
		if (userNameFromCookie != null){
          this.userName = userNameFromCookie;
		}
		
		if (this.roomName === ""){
            var roomNameFromCookie = localStorage.getItem("roomName");
            if (roomNameFromCookie != null){
              this.roomName = roomNameFromCookie;
            }
		}
     },
    methods: {
        connect: function (message) {
          if (this.userName.length <=2 ){
              alert("Please enter User Name (min. 3 letters)");
              return;
          }
          if (this.roomName.length <=2 ){
              alert("Please enter Room Name (min. 3 letters)");
              return;
          }
          
            localStorage.setItem('roomName', this.roomName);
            localStorage.setItem('userName', this.userName);
			window.location.href = "/" + this.roomName + "?name="+this.userName;
        }
    }
});
</script>

    <script>
    
    const theme = localStorage.getItem('theme');
    var isDarkThemeDefault = false;
    if (window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches) {
      isDarkThemeDefault = true;
    }
    const article = document.body;
    article.dataset.theme = theme;
    let button = document.getElementById("theme-button");
    if (theme === "dark" || (theme !== "light" && isDarkThemeDefault)){
      button.classList.remove("fa-moon");
      button.classList.add("fa-lightbulb");
      button.value = "Light Theme";
    }else{
      button.classList.remove("fa-lightbulb");
      button.classList.add("fa-moon");
      button.value = "Dark Theme";
    }
    
function toggleTheme(){
    const currentTheme = localStorage.getItem('theme');
    if (currentTheme === "dark" || (currentTheme !== "light" && isDarkThemeDefault)){
        localStorage.setItem('theme', 'light');
    }else{
        localStorage.setItem('theme', 'dark');
    }
    const theme = localStorage.getItem('theme');
    console.log("theme" + theme);
    const documentBody = document.body;
    let button = document.getElementById("theme-button");
    
    
    if (theme === "dark" || (theme !== "light" && isDarkThemeDefault)){
      button.classList.remove("fa-moon");
      button.classList.add("fa-lightbulb");
      button.value = "Light Theme";
    }else{
      button.classList.add("fa-moon");
      button.classList.remove("fa-lightbulb");
      button.value = "Dark Theme";
    }
    documentBody.dataset.theme = theme;
    
    document.body.classList.add("transition");
    document.body.classList.add("duration-500");
    document.body.classList.add("ease-in-out");
}
</script>
